// Improves detection of available updates for premium plugins
add_filter( 'mainwp_detect_premium_plugins_update', 'hook_mainwp_detect_premium_plugins_update', 10 );
function hook_mainwp_detect_premium_plugins_update( $premiums = array() ){
$premiums[] = 'yith-product-shipping-for-woocommerce-premium/init.php';
$premiums[] = 'yith-woocommerce-advanced-product-options-premium/init.php';
$premiums[] = 'yith-woocommerce-badges-management-premium/init.php';
$premiums[] = 'yith-woocommerce-name-your-price/init.php';
$premiums[] = 'yith-woocommerce-waiting-list-premium/init.php';
$premiums[] = 'yith-cost-of-goods-for-woocommerce-premium/init.php';
$premiums[] = 'yith-woocommerce-coupon-email-system-premium/init.php';
$premiums[] = 'yith-woocommerce-custom-order-status-premium/init.php';
$premiums[] = 'yith-woocommerce-gift-cards-premium/init.php';
$premiums[] = 'yith-woocommerce-minimum-maximum-quantity/init.php';
$premiums[] = 'yith-woocommerce-points-and-rewards-premium/init.php';
$premiums[] = 'yith-woocommerce-brands-add-on-premium/init.php';
$premiums[] = 'yith-woocommerce-booking-premium/init.php';
$premiums[] = 'yith-woocommerce-checkout-manager/init.php';
$premiums[] = 'yith-woocommerce-stripe-premium/init.php';
$premiums[] = 'yith-easy-login-register-popup-for-woocommerce/init.php';
$premiums[] = 'yith-live-push-notifications-for-woocommerce/init.php';
$premiums[] = 'yith-woocommerce-bulk-product-editing-premium/init.php';
$premiums[] = 'yith-woocommerce-dynamic-pricing-and-discounts-premium/init.php';
$premiums[] = 'yith-woocommerce-eu-vat-premium/init.php';
$premiums[] = 'yith-woocommerce-frequently-bought-together-premium/init.php';
$premiums[] = 'yith-woocommerce-order-tracking-premium/init.php';
$premiums[] = 'yith-woocommerce-pdf-invoice-premium/init.php';
$premiums[] = 'yith-woocommerce-product-bundles-premium/init.php';
$premiums[] = 'yith-woocommerce-save-for-later-premium/init.php';
$premiums[] = 'yith-woocommerce-wishlist-premium/init.php';
$premiums[] = 'yith-composite-products-for-woocommerce/init.php';
$premiums[] = 'yith-woocommerce-catalog-mode-premium/init.php';
$premiums[] = 'yith-deals-for-woocommerce-premium/init.php';
$premiums[] = 'yith-point-of-sale-for-woocommerce/init.php';
$premiums[] = 'yith-woocommerce-subscription-premium/init.php';
$premiums[] = 'yith-woocommerce-affiliates-premium/init.php';
   return $premiums;
}

